{
  "name": "@repay/cactus-icons",
  "version": "0.6.0",
  "description": "Cactus design-system icons as React elements",
  "module": "i/index.js",
  "main": "i/index.cjs.js",
  "types": "i/index.d.ts",
  "repository": "https://github.com/repaygithub/cactus/tree/master/modules/cactus-icons",
  "author": "REPAY",
  "license": "MIT",
  "files": [
    "i"
  ],
  "scripts": {
    "cleanup": "rm -rf ts i",
    "dev": "start-storybook -p 9001 -c .storybook",
    "build": "yarn build:ci",
    "postbuild": "node scripts/gen-docs.js",
    "build:ci": "yarn build:ts && yarn build:cjs && yarn build:babel && yarn build:types",
    "build:ts": "node ./scripts/svgr",
    "postbuild:ts": "node ./scripts/post-build-ts",
    "build:cjs": "repay-scripts build --lib --config rollup.config.js ts/index.ts",
    "build:babel": "NODE_ENV=production babel ts -d i -x .ts -x .tsx",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build:stories": "build-storybook -c .storybook -o ./.storybook/dist",
    "debug": "node --inspect-brk ./node_modules/.bin/svgr svgs -d built --config-file svgr.config.js --ext tsx",
    "test": "yarn jest",
    "test:local": " yarn test:types && yarn test",
    "test:ci": "yarn test:local --maxWorkers=2",
    "test:types": "tsc -p tsconfig.test.json --noEmit"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/__setup__/setup.ts"
    ],
    "testRegex": ".*\\.test\\.(tsx?)$",
    "verbose": true,
    "coverageReporters": [
      "lcov",
      "text",
      "json-summary"
    ]
  },
  "peerDependencies": {
    "prop-types": ">=15.0.0",
    "react": "^16.8.3",
    "styled-components": "^4.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@repay/babel-preset": "^0.2.0",
    "@repay/cactus-theme": "^0.4.4",
    "@repay/scripts": "^0.3.1",
    "@storybook/addon-knobs": "^5.0.8",
    "@storybook/react": "5.0.8",
    "@svgr/core": "^4.2.0",
    "@types/node": "^11.13.7",
    "@types/storybook__addon-knobs": "^4.0.5",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-system": "^4.2.0",
    "babel-jest": "^24.7.1",
    "fast-glob": "^2.2.6",
    "jest": "^24.7.1",
    "jest-styled-components": "^6.2.1",
    "prettier": "^1.17.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^6.1.2",
    "styled-components": "^4.1.2",
    "typescript": "3.4.3"
  },
  "dependencies": {
    "styled-system": "^4.1.0"
  }
}
