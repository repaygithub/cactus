{
  "name": "@repay/cactus-web",
  "version": "0.1.1",
  "description": "A UI component library for web built in React by REPAY",
  "main": "dist/cactus-web.js",
  "module": "dist/cactus-web.cjs.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/repaygithub/cactus/tree/master/modules/cactus-ui",
  "license": "MIT",
  "scripts": {
    "cleanup": "rm -rf dist coverage .storybook/dist",
    "new": "node scripts/make-component.js",
    "test": "jest",
    "tdd": "jest --watch",
    "test:ci": "yarn test:types && yarn test",
    "test:types": "tsc -p ./tsconfig.json --noEmit",
    "dev": "start-storybook -p 9001 -c .storybook",
    "build:stories": "build-storybook -c .storybook -o ./.storybook/dist",
    "prebuild": "yarn build:types",
    "build": "repay-scripts build --lib --config rollup.config.js src/index.ts",
    "postbuild": "yarn build:types",
    "build:types": "tsc --project ./tsconfig.build.json --emitDeclarationOnly"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@repay/cactus-icons)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/__setup__/setup.ts"
    ],
    "testRegex": ".*\\.test\\.(tsx?)$",
    "verbose": true,
    "coverageReporters": [
      "lcov",
      "text",
      "json-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.story.{ts,tsx}",
      "!src/storySupport/**"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@repay/cactus-icons": "^0.2.0",
    "@repay/scripts": "^0.2.0",
    "@storybook/addon-actions": "^5.0.5",
    "@storybook/addon-knobs": "^5.0.5",
    "@storybook/react": "^5.1.0-alpha.20",
    "@storybook/theming": "^5.0.5",
    "@types/storybook__addon-knobs": "^4.0.4",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^4.1.12",
    "@types/styled-system": "^4.0.0",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "jest": "^24.1.0",
    "jest-styled-components": "^6.2.1",
    "react": "^16.8.3",
    "react-dom": "^16.8.5",
    "react-testing-library": "^6.0.3",
    "rollup-plugin-commonjs": "^9.3.4",
    "styled-components": "^4.1.2",
    "typescript": "^3.3.4000",
    "webpack": "^4.29.6"
  },
  "peerDependencies": {
    "react": "^16.8.3",
    "styled-components": "^4.1.2"
  },
  "dependencies": {
    "@repay/cactus-theme": "^0.1.0",
    "styled-system": "^4.1.0"
  }
}
