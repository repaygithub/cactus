{
  "name": "@repay/cactus-web",
  "version": "0.0.0",
  "description": "A UI component library for web built in React by REPAY",
  "main": "index.js",
  "repository": "https://github.com/repaygithub/cactus/tree/master/modules/cactus-ui",
  "license": "MIT",
  "scripts": {
    "new": "node scripts/make-component.js",
    "test": "jest",
    "tdd": "jest --watch",
    "test:ci": "yarn test:types && yarn test",
    "test:types": "tsc -p ./tsconfig.json --noEmit",
    "dev": "start-storybook -p 9001 -c .storybook"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/__setup__/setup.ts"
    ],
    "testRegex": ".*\\.test\\.(tsx?)$",
    "verbose": true,
    "coverageReporters": [
      "lcov",
      "text",
      "json-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@repay/scripts": "^0.1.0",
    "@storybook/addon-info": "^5.0.5",
    "@storybook/addon-knobs": "^5.0.5",
    "@storybook/addon-options": "^5.0.5",
    "@storybook/react": "^5.0.5",
    "@types/storybook__addon-knobs": "^4.0.4",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^4.1.12",
    "@types/styled-system": "^4.0.0",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "jest": "^24.1.0",
    "jest-styled-components": "^6.2.1",
    "react": "^16.8.3",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.8.5",
    "react-testing-library": "^6.0.3",
    "styled-components": "^4.1.2",
    "typescript": "^3.3.4000",
    "webpack": "^4.29.6"
  },
  "peerDependencies": {
    "react": "^16.8.3"
  },
  "dependencies": {
    "@repay/cactus-theme": "./modules/cactus-theme",
    "styled-system": "^4.1.0"
  }
}
