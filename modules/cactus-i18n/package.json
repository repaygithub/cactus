{
  "name": "@repay/cactus-i18n",
  "version": "1.0.0",
  "description": "I18n library for React using Fluent",
  "main": "dist/cactus-i18n.cjs.js",
  "module": "dist/cactus-i18n.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/repaygithub/cactus/tree/master/modules/cactus-i18n",
  "license": "MIT",
  "scripts": {
    "cleanup": "rm -rf dist coverage",
    "predev": "yarn run cleanup && yarn build:types",
    "dev": "repay-scripts dev --lib src/index.ts",
    "build": "repay-scripts build --lib src/index.ts",
    "postbuild": "yarn build:types",
    "build:types": "tsc --project ./tsconfig.build.json --emitDeclarationOnly",
    "test:types": "tsc --project ./tsconfig.json --noEmit",
    "test:local": "yarn test:types && yarn test --coverage",
    "test:ci": "yarn test:local --maxWorkers=2",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "babel-jest"
    },
    "testRegex": "tests/.*\\.test\\.(jsx?|tsx?)$",
    "verbose": true,
    "coverageReporters": [
      "lcov",
      "text",
      "json-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@repay/babel-preset": "1.0.1",
    "@repay/scripts": "^2.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@types/fluent__bundle": "^0.14.3",
    "@types/fluent__langneg": "^0.3.1",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.53",
    "babel-jest": "^26.6.0",
    "jest": "^26.6.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@fluent/bundle": "^0.16.0",
    "@fluent/langneg": "^0.5.0",
    "intl": "^1.2.5",
    "intl-pluralrules": "^1.2.2"
  },
  "peerDependencies": {
    "prop-types": ">=15.0.0",
    "react": "^16.8.3 || ^17.0.0"
  }
}
