{
  "name": "@repay/cactus-fwk",
  "version": "0.2.0",
  "description": "Cactus Framework for React",
  "main": "dist/cactus-fwk.cjs.js",
  "module": "dist/cactus-fwk.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/repaygithub/cactus/tree/master/modules/cactus-fwk",
  "author": "REPAY",
  "license": "MIT",
  "scripts": {
    "cleanup": "rm -rf dist coverage",
    "predev": "yarn run cleanup && yarn build:types",
    "dev": "repay-scripts dev --lib src/index.tsx",
    "build": "repay-scripts build --lib src/index.ts",
    "postbuild": "yarn build:types",
    "build:types": "tsc --project ./tsconfig.build.json --emitDeclarationOnly",
    "test:types": "tsc --project ./tsconfig.json --noEmit",
    "test:ci": "yarn test:types && yarn test --coverage",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "babel-jest"
    },
    "testRegex": "tests/.*\\.test\\.(jsx?|tsx?)$",
    "verbose": true,
    "coverageReporters": [
      "lcov",
      "text",
      "json-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  },
  "devDependencies": {
    "@repay/babel-preset": "=0.2.0",
    "@repay/scripts": "^0.2.2",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.15",
    "jest": "^24.7.1",
    "jest-dom": "^3.1.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^6.1.2",
    "typescript": "^3.4.3"
  },
  "peerDependencies": {
    "react": "^16.8.3"
  },
  "dependencies": {}
}
