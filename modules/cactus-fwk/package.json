{
  "name": "@repay/cactus-fwk",
  "version": "0.5.1",
  "description": "Cactus Framework for React",
  "main": "dist/cactus-fwk.cjs.js",
  "module": "dist/cactus-fwk.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/repaygithub/cactus/tree/master/modules/cactus-fwk",
  "author": "REPAY",
  "license": "MIT",
  "scripts": {
    "cleanup": "rm -rf dist coverage",
    "predev": "yarn run cleanup && yarn build:types",
    "dev": "repay-scripts dev --lib src/index.ts",
    "build": "repay-scripts build --lib src/index.ts",
    "postbuild": "yarn build:types",
    "build:types": "tsc --project ./tsconfig.build.json --emitDeclarationOnly",
    "test:types": "tsc --project ./tsconfig.json --noEmit",
    "test:local": "yarn test:types && yarn test --coverage",
    "test:ci": "yarn test:local --maxWorkers=2",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "babel-jest"
    },
    "testRegex": "tests/.*\\.test\\.(jsx?|tsx?)$",
    "verbose": true,
    "coverageReporters": [
      "lcov",
      "text",
      "json-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "reporters": ["default", ["jest-sonar", { "outputDirectory": ".", "outputName": "test-report.xml" }]]
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@repay/babel-preset": "1.0.2",
    "@repay/scripts": "^2.0.2",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^17.0.2",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "jest-sonar": "^0.2.12",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript": "^4.1.5"
  },
  "peerDependencies": {
    "prop-types": ">=15.0.0",
    "react": "^16.8.3 || ^17.0.0"
  }
}
