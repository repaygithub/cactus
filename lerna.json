{
  "packages": [
    "website",
    "modules/*",
    "examples/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/tests/**",
        "**/.storybook/**",
        "**/*.story.tsx",
        "**/*.test.tsx",
        "**/__snapshots__/**",
        "**/__image_snapshots__/**"
      ]
    }
  }
}
